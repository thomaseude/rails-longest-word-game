<html>
<head>

  <meta charset="UTF-8">
  <title>new</title>
</head>
<body>
  <h1>New Game</h1>

  <ul>
  <% @letters.each do |letter| %>
    <li class="square-letter"><%= letter %></li>
  <% end %>
  </ul>

  <form action="score" method="post">
    <label for="inputWord">What is the longest word you can find?</label>
    <div class="col-md-6">
      <div class="form-row">
        <div class="col">
          <input type="text" class="form-control" id="inputWord" name="word">
        </div>
        <div class="col">
          <button type="submit" class="btn btn-primary">Play</button>
        </div>
      </div>
    </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>

</body>
</html>
